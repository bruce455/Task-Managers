<!-- home-header.html -->
<header class="homepage-header">
  <nav class="navbar">
    <div class="logo">
      <a href="/">MySite</a>
    </div>
  </nav>
  <section class="header-content">
    <h1 class="centered-header">Task Managers</h1>
  </section>
</header>

<main class="task-columns">
  <div class="column">
    <h2>Dailys</h2>
    <ul>
      {{#each daily_tasks}}
        <tr>
          <td>{{this.title}}</td>
          <td>{{this.description}}</td>
          <td>{{this.rewards}}</td>
          <td>{{this.priority}}</td>
          <td>{{this.due_date}}</td>
        </tr>
      {{/each}}
    </ul>
  </div>
  <div class="column">
    <h2>Upcoming</h2>
    <ul>
      {{#each upcoming_tasks}}
        <tr>
          <td>{{this.title}}</td>
          <td>{{this.description}}</td>
          <td>{{this.rewards}}</td>
          <td>{{this.priority}}</td>
          <td>{{this.due_date}}</td>
        </tr>
      {{/each}}
    </ul>
  </div>
</main>


<style>
  .centered-header { text-align: center; margin-top: 20px; } .task-columns {
  display: flex; justify-content: space-around; margin: 20px; } .column { width:
  45%; border: 1px solid #ccc; padding: 15px; border-radius: 5px;
  background-color: #f9f9f9; } .column h2 { text-align: center; }
</style>