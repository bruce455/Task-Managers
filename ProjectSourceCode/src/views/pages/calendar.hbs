{{!-- calendar.hbs — uses shared modal; no inline form --}}

<div class="calendar-page dark-theme">

  <div class="calendar-header">
    <div class="calendar-info">
      <p class="current-datetime"></p>
      <p class="user-login">Current User: {{userLogin}}</p>
    </div>

    <div class="calendar-nav">
      <h1>
        <button id="prevMonth">◄</button>
        <span id="currentMonth"></span>
        <button id="nextMonth">►</button>
      </h1>
      <p id="currentYear"></p>
    </div>
  </div>

  <div class="calendar">
    <div class="day-names-grid">
      <span class="day-name">Mon</span><span class="day-name">Tue</span>
      <span class="day-name">Wed</span><span class="day-name">Thu</span>
      <span class="day-name">Fri</span><span class="day-name">Sat</span>
      <span class="day-name">Sun</span>
    </div>
    <div id="calendar-days"></div>
  </div>

  <div class="custom-container text-center mt-3">
    <button id="addEventBtn"
            class="btn btn-primary"
            data-bs-toggle="modal"
            data-bs-target="#exampleModal">
      Create Event
    </button>
  </div>

  {{> addTaskModal}}
  {{> currentTaskModal}}
  {{> viewEventModal}}    {{!-- new --}}
</div>
