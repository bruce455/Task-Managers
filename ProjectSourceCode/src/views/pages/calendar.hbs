<div class="calendar-page">
  <div class="calendar-header">
    <div class="calendar-info">
      <p class="current-datetime">Current Date and Time (UTC - YYYY-MM-DD HH:MM:SS formatted): 2025-04-10 21:21:09</p>
      <p class="user-login">Current User's Login: {{userLogin}}</p>
    </div>
    <div class="calendar-nav">
      <h1>
        <button id="prevMonth">◄</button>
        <span id="currentMonth"></span>
        <button id="nextMonth">►</button>
      </h1>
      <p id="currentYear"></p>
    </div>
  </div>
  <div class="calendar">
    <div class="day-names-grid">
      <span class="day-name">Mon</span>
      <span class="day-name">Tue</span>
      <span class="day-name">Wed</span>
      <span class="day-name">Thu</span>
      <span class="day-name">Fri</span>
      <span class="day-name">Sat</span>
      <span class="day-name">Sun</span>
    </div>
    <div id="calendar-days">
      {{!-- Days will be populated by JavaScript --}}
    </div>
  </div>

  <div class="event-section">
    <button id="addEventBtn" class="add-event-btn">Add Event</button>
    
    <form id="eventForm" class="event-form">
      <h2>Add New Event</h2>
      <label for="eventTitle">Event Title:</label>
      <input type="text" id="eventTitle" name="eventTitle" required>

      <label for="eventStart">Start Date & Time:</label>
      <input type="datetime-local" id="eventStart" name="eventStart" required>

      <label for="eventEnd">End Date & Time (optional):</label>
      <input type="datetime-local" id="eventEnd" name="eventEnd">

      <div class="form-buttons">
        <button type="submit">Add Event</button>
        <button type="button" id="cancelEventBtn">Cancel</button>
      </div>
    </form>
  </div>
</div>