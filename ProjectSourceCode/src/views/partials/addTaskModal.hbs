<div class="modal fade" id="addTaskModal" tabindex="-1" aria-labelledby="addTaskModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content" style="background-color: #1e1e1e; color: #1e1e1e;">
      <form id="addTaskForm">
        <div class="modal-header">
          <h5 class="modal-title" id="addTaskModalLabel">New Task</h5>
          <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>

        <div class="modal-body">
          <input type="text" name="title" class="form-control" placeholder="Task Title" required>

          <input type="text" name="description" class="form-control mt-3" placeholder="Short Description">

          <select name="priority" class="form-control mt-3">
            <option value="" disabled selected>Priority</option>
            <option value="1">Low</option>
            <option value="2">Medium</option>
            <option value="3">High</option>
          </select>

          <input type="datetime-local" name="due_date" class="form-control mt-3" placeholder="Due Date">
        </div>

        <div class="modal-footer">
          <button type="submit" class="btn btn-primary w-100">Add Task</button>
        </div>
      </form>
    </div>
  </div>
</div>
